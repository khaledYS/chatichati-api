{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "removeComments": true,
      "sourceMap": false,
  
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
  
      "skipLibCheck": true,
      "allowJs": true,
      // "checkJs": true,
      "forceConsistentCasingInFileNames": true,
      
      "strict": false,
    },
    "include": ["./package.json", "src"],
    "exclude": ["node_modules", "dist/*", "src/static"],
    "lib": ["es6"],
  }